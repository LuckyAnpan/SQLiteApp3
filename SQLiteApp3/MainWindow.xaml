<Window x:Class="SQLiteApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLiteApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="37" Margin="292,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="194" FontSize="16"/>
        <Label Content="Name :" HorizontalAlignment="Left" Height="37" Margin="223,140,0,0" VerticalAlignment="Top" Width="64" FontSize="16"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Height="39" Margin="292,0,0,0" VerticalAlignment="Center" Width="87" FontSize="16" Click="btnAdd_Click"/>
        <Button x:Name="btnShow" Content="Show" HorizontalAlignment="Left" Height="39" Margin="400,0,0,0" VerticalAlignment="Center" Width="86" FontSize="16" Click="btnShow_Click"/>

    </Grid>
</Window>
